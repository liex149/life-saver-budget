
<form class="form newblogpost" id="blogpost">
<div class="form-group">

      <div class="mb-3">
        <label
          for="title"
          class="form-label"
        >Blog Title</label>
        <textarea
          class="form-control"
          id="title"
          rows="1"
        >Your Blog Title</textarea>
      </div>
    </div>
    <div class="form-group input-lg">

      <div class="mb-3">
        <label
          for="post"
          class="form-label"
        >Content</label>
        <textarea
          class="form-control"
          id="post"
          rows="3"
        >Your Content Goes here</textarea>
      </div>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Post New Comment</button>
    </div>

  </form>
<script src="../js/newpost.js"></script>