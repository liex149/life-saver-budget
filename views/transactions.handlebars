
<div class="form-group">
  <label for="Transactions List"></label>
  
  <div class=" py-3 text-dark bg-light rounded">
    <div>
      <h4>Your Transactions:</h4>
      {{#each transactions as |transaction|}}
        <div class="transaction-item p-2 border-bottom rounded mb-2">
          <p>Date: {{transaction.date_created}}</p>
          <p>Total: ${{transaction.amount}}</p>
          <p>Category: {{transaction.category.category_name}}</p>
          <p>Comments: {{transaction.notes}}</p>
          <a href="/transactions/{{transaction.id}}">Edit</a>
        </div>
      {{/each}}
    </div>
  </div>
</div>
